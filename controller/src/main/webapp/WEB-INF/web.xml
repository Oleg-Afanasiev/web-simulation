<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">
    <display-name>Simulation Web Application</display-name>

    <welcome-file-list>
        <welcome-file>home</welcome-file>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <filter>
        <description>Requires user to log in as a member</description>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.telesens.afanasiev.filters.LoginFilter</filter-class>
        <init-param>
            <param-name>loginActionURI</param-name>
            <param-value>/login</param-value>
        </init-param>
        <init-param>
            <param-name>createLoginURI</param-name>
            <param-value>/signup</param-value>
        </init-param>
        <init-param>
            <param-name>logoutURI</param-name>
            <param-value>/logout</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <url-pattern>/jsp/*</url-pattern>
        <!--<servlet-name>LoginServlet</servlet-name>-->
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>*.css</url-pattern>
        <url-pattern>*.js</url-pattern>
        <url-pattern>*.otf</url-pattern>
        <url-pattern>*.eot</url-pattern>
        <url-pattern>*.svg</url-pattern>
        <url-pattern>*.ttf</url-pattern>
        <url-pattern>*.woff</url-pattern>
        <url-pattern>*.woff2</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.HomeServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.test.TestServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.login.LoginServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.login.LogoutServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.login.SignUpServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BusRunServlet</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.busrun.BusRunServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>BusRunServlet</servlet-name>
        <url-pattern>/rule/busrun</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PassgenServlet</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.passgen.PassgenServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>PassgenServlet</servlet-name>
        <url-pattern>/rule/passgeneration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Simulation</servlet-name>
        <servlet-class>com.telesens.afanasiev.servlets.simulation.SimulationServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Simulation</servlet-name>
        <url-pattern>/simulation</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/jsp/page404.jsp</location>
    </error-page>

</web-app>
